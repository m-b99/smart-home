<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundColor1"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/message_send"
            android:text="hello, hello!"
            android:background="@drawable/chat_input_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_212sdp"
            android:padding="10dp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="20sp"
            android:minHeight="@dimen/_25sdp"
            android:textColor="@color/backgroundColor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_message_send_time"
            android:text="11:40"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/message_send"
            app:layout_constraintRight_toLeftOf="@+id/message_send" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:src="@drawable/robot"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_message_name"
            android:text="Myhome Bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/textColor"
            app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/message_receive"
            android:text="hi man, how are you?"
            android:background="@drawable/chat_response_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_212sdp"
            android:padding="10dp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="20sp"
            android:minHeight="@dimen/_25sdp"
            android:textColor="@color/backgroundColor"
            app:layout_constraintTop_toBottomOf="@+id/text_message_name"
            app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/text_message_time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            app:layout_constraintLeft_toRightOf="@+id/message_receive"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/message_receive" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>