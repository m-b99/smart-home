<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/i_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@color/backgroundColor1"
                android:fontFamily="@font/mazzardlbolditalic"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="28sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/ed_rep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:layout_below="@+id/i_ed"
                android:src="@drawable/ed"/>

            <soup.neumorphism.NeumorphCardView
                android:layout_below="@+id/ed_rep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginTop="50dp"
                app:neumorph_backgroundColor="@color/backgroundColor"
                app:neumorph_shadowColorDark="@color/strokecol"
                app:neumorph_shadowColorLight="@color/strokecol"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">


<!--                            <TextView-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginTop="5dp"-->
<!--                                android:layout_marginBottom="5dp"-->
<!--                                android:drawablePadding="5dp"-->
<!--                                android:fontFamily="@font/mazzardlbolditalic"-->
<!--                                android:gravity="center"-->
<!--                                android:showText="true"-->
<!--                                android:text="Edit Name"-->
<!--                                android:textAlignment="center"-->
<!--                                android:textColor="@color/textColor"-->
<!--                                android:textSize="24sp"-->
<!--                                android:textStyle="bold" />-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="@color/backgroundColor"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/mazzardlbolditalic"
                            android:gravity="center"
                            android:showText="true"
                            android:text="Name:"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/ed_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:backgroundTint="@color/textColor"
                            android:drawablePadding="@dimen/_10sdp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:shadowColor="@color/textColor"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textColor"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="@color/backgroundColor"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/mazzardlbolditalic"
                            android:gravity="center"
                            android:showText="true"
                            android:text="Email:"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/ed_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:backgroundTint="@color/textColor"
                            android:drawablePadding="@dimen/_10sdp"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:shadowColor="@color/textColor"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textColor"
                            android:textSize="20sp" />
                    </LinearLayout>


                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/BEDemail"
                        style="@style/Widget.Neumorph.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzardlbolditalic"
                        android:text="UPDATE DETAILS"
                        android:textColor="@color/backgroundColor"
                        app:neumorph_shadowColorDark="@color/strokecol"
                        app:neumorph_shadowColorLight="@color/strokecol"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:neumorph_backgroundColor="@color/textColor" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>

        </RelativeLayout>
    </ScrollView>